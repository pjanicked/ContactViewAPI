{
  "ConnectionStrings": {
    "Default": "User ID=#{UserId};Password=#{password};Host=localhost;Port=#{Port};Database=#{DatabaseName};"
  },
  "Jwt": {
    "Issuer": "#{JwtIssuer}",
    "Secret": "#{JwtSecret}",
    "ExpirationInDays": 30
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "EmailOptions": {
    "From": "#{EmailId}",
    "SmtpServer": "smtp.zoho.in",
    "Port": 465,
    "Username": "#{EmailId}",
    "Password": "#{EmailPassword}"
  },
  "AllowedHosts": "*"
}
